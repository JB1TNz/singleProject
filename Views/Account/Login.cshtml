  color: #666;
  margin-bottom: 24px;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-size: 0.9rem;
  margin-bottom: 6px;
}

.form-group input {
  padding: 12px;
  border-radius: 6px;
  border: 1px solid #ccc;
}

