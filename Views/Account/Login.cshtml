  margin-top: 10px;
  padding: 12px;
  border: none;
  border-radius: 6px;
  background: #2e7d32;
  color: white;
  font-size: 1rem;
  cursor: pointer;
}

.btn-primary:hover {
  background: #256628;
}

.switch-text {
  text-align: center;
  margin-top: 20px;
  font-size: 0.95rem;
}

.switch-text span {
  color: #fbc02d;
  font-weight: bold;
  cursor: pointer;
}

.hidden {
  display: none;
}

/* Right content */
.auth-info {
  max-width: 420px;
}

.auth-info h2 {
  font-size: 2.2rem;
  margin-bottom: 12px;
}

.auth-info p {
  font-size: 1.1rem;
  color: #555;
}

</style>
