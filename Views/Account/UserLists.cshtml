@{
  ViewData["Title"] = "User Lists";
}

<section>
  <h1>User Management</h1>
  <p>Manage user accounts and permissions.</p>
  
  <button id="AddUserBtn" class="btn btn-success mb-3">Add User</button>

  <script>
    // add moke up user data
    const users = [
      { id: 1, name: 'John Doe', email: '123@gmail.com', role: 'Admin' },
      { id: 2, name: 'Jane Smith', email: '456@gmail.com', role: 'User' },
      { id: 3, name: 'Mike Johnson', email: '789@gmail.com', role: 'User' }
    ];

    function populateUserTable() {
      const tbody = document.querySelector('tbody');
      users.forEach(user => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${user.id}</td>
          <td>${user.name}</td>
          <td>${user.email}</td>
          <td>${user.role}</td>
          <td>
            <button class="btn btn-sm btn-primary">Edit</button>
            <button class="btn btn-sm btn-danger">Delete</button>
          </td>
        `;
        tbody.appendChild(row);
      });
    }

    document.addEventListener('DOMContentLoaded', populateUserTable);
  </script>



  <table class="table table-striped">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>
</section>