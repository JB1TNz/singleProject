  font-family: Arial, sans-serif;
  margin: 0;
  background: #f9f9f9;
}

.auth-hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 60px;
  padding: 40px;
}

